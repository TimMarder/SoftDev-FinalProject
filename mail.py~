from flask import Flask
from flask_mail import Mail, Message

app = Flask(__name__)

mail = Mail(app)

@app.route("/")
def index():
    msg = Message("Hello",
                  sender = "clara.mohri@gmail.com",
                  recipients = "cmohri@stuy.edu")
    msg.body = "Hello"
    mail.send(msg)

if __name__ == "__main__":
    app.debug = True
    app.run()
